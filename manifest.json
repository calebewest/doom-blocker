{
  "manifest_version": 2,
  "name": "Feed Hider",
  "version": "1.2",
  "description": "Blocks distracting feeds on YouTube and LinkedIn",

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Feed Hider Active"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/youtube.js"],
      "css": ["content/youtube.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content/linkedin.js"],
      "run_at": "document_idle"
    }
  ]
}
